    "npm-run-all": "^4.1.2",
    "optimize-js-plugin": "0.0.4",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-hot-loader": "^4.1.1",
    "sass-loader": "^7.0.1",
    "shx": "^0.2.2",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3"
  }
