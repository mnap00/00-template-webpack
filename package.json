{
  "name": "00-boilerplate-webpack",
  "version": "0.1.0",
  "description": "",
  "private": true,
  "scripts": {
    "init-project": "npm init && npm install && run-s init:*",
    "init:dir-src": "shx mkdir -p src/components src/containers src/images src/vendor",
    "lint:js": "eslint --ext .js src/",
    "build": "webpack --env production",
    "build:img": "shx cp -r src/images build/images",
    "build:lib": "shx cp -r src/vendor build/vendor",
    "start": "webpack-dev-server --hot --env development",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/mnap00/00-boilerplate-webpack.git"
  },
  "keywords": [
    "webpack",
    "node",
    "react"
  ],
